<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#682525"
    android:backgroundTint="#262727"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#6A4343"
            android:backgroundTint="#FFFFFF"
            android:gravity="end"
            android:hint=""
            android:radius="400dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botonDelete"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/boton_terciario"
            android:onClick="onDeleteClick"
            android:text="DEL" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton7"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="7" />

        <Button
            android:id="@+id/boton8"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="8" />

        <Button
            android:id="@+id/boton9"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="9" />

        <Button
            android:id="@+id/botonMultiply"
            style="@style/BotonSecundario"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_secundario"
            android:onClick="onOperatorClick"
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton4"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="4" />

        <Button
            android:id="@+id/boton5"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="5" />

        <Button
            android:id="@+id/boton6"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="6" />

        <Button
            android:id="@+id/botonMenos"
            style="@style/BotonSecundario"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_secundario"
            android:onClick="onOperatorClick"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton1"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="1" />

        <Button
            android:id="@+id/boton2"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="2" />

        <Button
            android:id="@+id/boton3"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="3" />

        <Button
            android:id="@+id/botonMas"
            style="@style/BotonSecundario"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_secundario"
            android:onClick="onOperatorClick"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton0"
            style="@style/BotonPrincipal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_terciario"
            android:onClick="onDigitClick"
            android:text="0" />

        <Button
            android:id="@+id/botonComa"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="," />

        <Button
            android:id="@+id/botonIgual"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boton_principal"
            android:onClick="onDigitClick"
            android:text="=" />
    </LinearLayout>
</LinearLayout>
